<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Reserved time</th>
      <th>Checkout time</th>
      <th>Rental Charge</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= @status[reservation.status] %></td>
        <td><%= reservation.reserved_time %></td>
        <td><%= reservation.checkout_time %></td>
        <td><%= sprintf("$ %0.02f", reservation.rental_charge) %></td>
        <td><%= reservation.created_at %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

