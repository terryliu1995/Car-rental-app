<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Reserved time</th>
      <th>Checkout time</th>
      <th>Rental Charge</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= @status[reservation.status] %></td>
        <td><%= reservation.reserved_time %></td>
        <td><% if reservation.checkout_time %>
              <%= reservation.checkout_time %>
          <% else %>
              No check out
          <% end %>
        </td>
        <td><%= sprintf("$ %0.02f", reservation.rental_charge) %></td>
        <td><%= reservation.created_at %></td>
        <td><%= link_to 'Details', reservation %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<% if session[:user_type]==0 %>
<%= link_to "Back", current_user %>
<% else %>
    <%= link_to "Back to Main Menu",current_user %>
<% end %>

