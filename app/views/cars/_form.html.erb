<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :manufacturer %><br>
    <%= f.text_field :manufacturer %>
  </div>
  <div class="field">
    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :style %><br>
    <%= f.select :style, options_for_select(["Seden", "Couple", "SUV"],
                                            :class => 'genForm_dropBox')%>
  </div>
  <div class="field">
    <%= f.label :licencePlateNumber %><br>
    <%= f.number_field :licencePlateNumber %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :status%><br>
    <%= f.select(:status, options_for_select([['Available', 0], ['Checked out', 1], ['Reserved', 2]]),
                   {class: "span2"}) %>
  </div>
  <div class="field">
    <%= f.label :hourlyRentalRate %><br>
    <%= f.text_field :hourlyRentalRate %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
